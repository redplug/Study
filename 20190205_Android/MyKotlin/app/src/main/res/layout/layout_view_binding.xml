<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/tallField"
            android:hint="키를 입력하세요" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="36dp"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <TextView
            android:text="cm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:layout_marginLeft="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/tallField" android:layout_marginStart="14dp"
            app:layout_constraintStart_toEndOf="@+id/tallField" android:layout_marginBottom="1dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/weightField"
            android:hint="체중을 입력하세요" app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="22dp"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tallField"/>
    <TextView
            android:text="kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginLeft="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/weightField" android:layout_marginStart="14dp"
            app:layout_constraintStart_toEndOf="@+id/weightField" android:layout_marginBottom="1dp"/>
    <TextView
            android:text="키와 체중을 입력 후 BMI 계산 버튼을 눌러주세요"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resultLabel" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="286dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="BMI 계산"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bmiButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="62dp"
            app:layout_constraintTop_toBottomOf="@+id/resultLabel" app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>